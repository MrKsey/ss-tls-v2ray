[Unit]
Description=shadowsocks client
After=network.target
[Service]
ExecStart=sslocal -c $CONFIG_PATH/client/ss.json
ExecStop=pkill -f "sslocal -c $CONFIG_PATH/client/ss.json"
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sslocal
User=nobody
Group=nogroup
[Install]
WantedBy=multi-user.target
